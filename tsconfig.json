{
  "compilerOptions": {
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "allowJs": false,
    "resolveJsonModule": false,
    "noEmitOnError": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "fix-imports.js"]
}
